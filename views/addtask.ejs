<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Addtask</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<style>
  .container {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 33px;
  }

  .add {
    background-color: lightblue;
    width: 400px;
    display: flex;
    flex-direction: column;
    padding: 20px;
    border-radius: 10px;
    margin-top: 30px;
    margin-left: 30px;
  }
</style>

<body>
  <div class="container">
    <div class="tab">
      <h1>Tasklist</h1>
      <% if(tasks.length===0){ %>
        <p>No Tasks Found.</p>
        <% } else { %>

          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <td> Task</td>
                <td> Status</td>
                <td> Deadline</t d>
                <td>Action</td>
              </tr>
            </thead>
            <% tasks.forEach(task=> { %>

              <tbody>
                <tr>
                  <td>
                    <%= task.task %>
                  </td>
                  <td>
                    <%= task.status %>
                  </td>
                  <td>
                    <%= task.deadline %>
                  </td>
                  <td>
                    <a href="/update/<%= task._id %>"> <button class="btn btn-info">Update</button></a>
                    <a href="/delete/<%= task._id %>"> <button class="btn btn-danger">Delete</button></a>
                  </td>
                </tr>
              </tbody>
              <% }) %>
          </table>
          <% } %>
    </div>


    <div class="add">
      <h1>Addtask</h1>
      <form action="/addtask" method="post">
        <div class="form-group">
          <label>Task: </label>
          <input type="text" name="task" class="form-control" placeholder="Enter task" required>
        </div>
        <div class="form-group">
          <label>Status: </label>
          <input type="text" name="status" class="form-control" placeholder="Status" required>
        </div>
        <div class="form-group">
          <label>Deadline: </label>
          <input type="date" name="deadline" class="form-control" placeholder="dd-mm-yy" required>
        </div>
        <div class="form-group">
          <button class="btn btn-info" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>

</html>
</body>
